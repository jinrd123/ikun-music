/* pages/index/index.wxss */
/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
  /* iphone6机型中1px=2rpx，（因为iphone6的width是375px，小程序中所有机型宽度为750rpx） */
}
.banners image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  margin: 20rpx 0;
  color: #fff;
}
.navItem text:nth-child(2) {
  font-size: 26rpx;
}