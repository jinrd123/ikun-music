/* 头部区域 */
.recommendSongContainer .header {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.recommendSongContainer .header image {
    width: 100%;
    height: 100%;
}

.recommendSongContainer .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    transform: translate(-45%, -40%);
    color: #fff;
}

.header .date .day {
    font-size: 38rpx;
}